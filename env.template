# Environment Variables Template
# Copy this file to .env and fill in your actual values

# AI Provider Configuration (choose one)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Choose your AI provider: "openai" or "anthropic"
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration  
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# App Configuration
APP_NAME=Hooma AI Chatbot
APP_VERSION=1.0.0
DEBUG=false

# Security
SECRET_KEY=your_secret_key_here_change_this_in_production

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_REQUESTS_PER_HOUR=500

# CORS Configuration
ALLOWED_ORIGINS=https://hooma.io,https://www.hooma.io,https://hooma.webflow.io

# Business Configuration
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18
BUSINESS_TIMEZONE=Europe/Bucharest
CONTACT_EMAIL=hello@hooma.io
WEBSITE_URL=https://hooma.io

# Widget Customization
WIDGET_PRIMARY_COLOR=#2563eb
WIDGET_SECONDARY_COLOR=#1e40af
WIDGET_ACCENT_COLOR=#3b82f6
WIDGET_POSITION=bottom-right

# Admin Panel (optional)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production
